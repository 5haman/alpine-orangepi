#!/bin/execlineb -P
redirfd -r 0 /dev/null
fdmove -c 2 1
backtick -ni TTY {
	getcwd CWD
	import -u CWD
	pipeline { s6-basename $CWD }
	s6-cut -d@ -f2
}
s6-envdir -I env
multisubstitute {
	import HOSTNAME
	import -u TTY
	import -u -D"115200" BAUDS
	import -D"vt100" TERM
}
cd /
exec /sbin/getty -L $BAUDS $TTY $TERM
