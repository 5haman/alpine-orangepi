#!/bin/execlineb -P
if { s6-echo "=> Starting dropbear..." }
fdmove -c 2 1
s6-envdir /etc/dropbear/env
multisubstitute {
	importas -ui IP IP
	importas -ui PORT PORT
}
fdmove 1 3
dropbear -R -E -K 0 -F -p $PORT
#s6-tcpserver -v -1 -- $IP $PORT
#s6-tcpserver-access -v 2 -DRl0 -t 5000 -i /etc/dropbear/rules --
#dropbear -i -R -E -K 60
