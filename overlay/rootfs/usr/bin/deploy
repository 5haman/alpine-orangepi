#!/usr/bin/s6-env sh

set -e

workdir=/etc/ansible
ts="$(date '+%Y%m%d_%H%M%S')"

mkdir -p /var/log/deploy

for param in ${@}; do
    s6-env ansible-playbook \
	-i "${workdir}/hosts/ec2.py" \
	-i "${workdir}/hosts/local" \
	"${workdir}/playbooks/${param}.yml" \
	> /var/log/deploy/${param}-${ts}.log
done
