#!/bin/execlineb
importas -i LIVE S6_LIVE

elgetopt d
importas -uD0 WITHDEPS ""
backtick -n QUERY {
	elgetpositionals
	ifelse { test $# -eq 0 } {
		s6-echo list services
	}
	ifelse { test $WITHDEPS = 1 } {
		s6-echo all-dependencies $@
	}
	s6-echo atomics $@
}
importas -us QUERY QUERY

forbacktickx NAME {
	pipeline { s6-rc-db -l${LIVE} $QUERY }
	s6-sort
}
importas -u NAME NAME
backtick -ni TYPE { s6-rc-db -l${LIVE} type $NAME }
importas -u TYPE TYPE
foreground { s6-echo -n "${NAME}: " }
${TYPE}-status $NAME
